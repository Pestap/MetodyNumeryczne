function [xvect,xdif,fx,it_cnt]=bisect(a,b,eps,fun)

xvect = [];
xdif = [];
fx = [];
it_cnt = 0;


for i = 1:1000
    x = (a+b)/2;
    y = feval(fun,x); % pobranie warto≈õci funkcji w x 

    xvect(end+1) = x;
    fx(end+1) = y;

    if abs(y) < eps || abs(a-b) < eps
        it_cnt = i;
        break;
    elseif feval(fun, a) * y < 0
            b = x;
    else
            a = x;
    end

end
